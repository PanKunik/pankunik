@using ViewModels

<div class="project-card">
    <div class="project-card-title">@ProjectCardContent.Title</div>
    <div class="project-card-image">
        <img class="project-card-image-content" src="@ProjectCardContent.ImagePath" loading="@LoadingType()"/>
    </div>
    <div class="project-card-description">
        @ProjectCardContent.Description
    </div>
    <div class="project-card-buttons">
        @if(!string.IsNullOrWhiteSpace(ProjectCardContent.WindowsDownloadLink))
        {
            <a target="_blank" href="@ProjectCardContent.WindowsDownloadLink" class="project-card-button">Pobierz (Windows)</a>
        }
        @if(!string.IsNullOrWhiteSpace(ProjectCardContent.LinuxDownloadLink))
        {
            <a target="_blank" href="@ProjectCardContent.LinuxDownloadLink" class="project-card-button">Pobierz (Linux)</a>
        }
        @if(!string.IsNullOrWhiteSpace(ProjectCardContent.MacDownloadLink))
        {
            <a target="_blank" href="@ProjectCardContent.MacDownloadLink" class="project-card-button">Pobierz (Mac)</a>
        }
        @if(!string.IsNullOrWhiteSpace(ProjectCardContent.GithubLink))
        {
            <a target="_blank" href="@ProjectCardContent.GithubLink" class="project-card-button-github project-card-button">Zobacz na GitHub</a>
        }
    </div>
</div>

@code {
    [Parameter]
    public ProjectViewModel ProjectCardContent { get; set; }
    [Parameter]
    public bool CanBeLazyLoaded { get; set; }

    private string LoadingType()
        => CanBeLazyLoaded ? "lazy" : "eager";
}